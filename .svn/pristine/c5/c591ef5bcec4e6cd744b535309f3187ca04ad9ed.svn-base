<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

    >

    <RelativeLayout
        android:id="@+id/allchannel_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_title_mLeft"
        android:layout_marginTop="@dimen/main_title_mTop"
        >
        <!--图标-->
        <!--<ImageView-->
            <!--android:id="@+id/allchannel_title_logo"-->
            <!--android:layout_width="@dimen/main_title_logo_width"-->
            <!--android:layout_height="@dimen/main_title_logo_height"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:focusable="false"-->
            <!--android:visibility="invisible"-->
            <!--android:focusableInTouchMode="false"/>-->
        <!--标题名-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_content_tv_mleft"

            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="@string/allchannel_tv_title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/main_title_tv_name"
            android:textStyle="bold"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/allchannel_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/allchannel_title"
        android:layout_marginTop="@dimen/main_content_mtop"
        android:layout_marginLeft="@dimen/main_content_mleft"
        android:layout_marginRight="@dimen/main_content_mright"
        android:descendantFocusability="afterDescendants"
        />

    <com.ppfuns.ui.view.MainUpView
        android:id="@+id/allchannel_mainupview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
