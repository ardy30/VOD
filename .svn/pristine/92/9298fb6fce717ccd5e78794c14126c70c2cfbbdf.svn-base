<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="@dimen/subject_detail_ll_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/subject_detail_ll_mleft"
        android:layout_marginTop="@dimen/subject_detail_ll_mtop"
        android:focusable="false"
        android:orientation="vertical"
        android:paddingRight="30px">

        <TextView
            android:id="@+id/subjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:maxLength="13"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/subject_detail_sname_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text=""
            android:textColor="#E1E2E9"
            android:textSize="@dimen/subject_detail_items_size"/>

        <TextView
            android:id="@+id/subjectDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/subject_detail_sdes_mtop"
            android:focusable="false"
            android:maxLength="13"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/subject_detail_sname_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/subjectDes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:maxLength="26"
            android:text=""
            android:textColor="#d5d5d6"
            android:textSize="@dimen/subject_detail_sdes1_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/subject_detail_sdes_mtop"
            android:focusable="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/filmName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:focusable="false"
                android:maxLength="8"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/subject_detail_sname_size"/>

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/subject_detail_score_mright"
                android:layout_weight="0.0"
                android:focusable="false"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/subject_detail_score_size"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10px"
            android:background="@drawable/dividers"/>

        <TextView
            android:id="@+id/filmDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/subject_detail_filmdes_mbottom"
            android:layout_marginTop="@dimen/subject_detail_filmdes_mtop"
            android:focusable="false"
            android:lineSpacingMultiplier="1.5"
            android:maxLines="9"
            android:text=""
            android:textColor="#a2aab0"
            android:textSize="@dimen/subject_detail_filmdes_size"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_arbj"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bjnew"/>
    <TextView
        android:id="@+id/tv_counts"
        android:visibility="gone"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="23sp"/>
    <com.ppfuns.ui.view.VodPlayImages

        android:id="@+id/ac_main_vodplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/subject_detail_iv_vodplay_mleft"
        android:layout_toRightOf="@id/layout"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <ImageView
        android:id="@+id/img_tip"
        android:layout_width="@dimen/subject_detail_iv_width"
        android:layout_height="@dimen/subject_detail_iv_height"
        android:layout_marginLeft="@dimen/subject_detail_iv_mleft"
        android:layout_marginTop="@dimen/subject_detail_iv_mtop"
        android:src="@drawable/zhuanti"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/faus"
        android:layout_width="@dimen/subject_detail_iv_faus_width"
        android:layout_height="@dimen/subject_detail_iv_faus_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/subject_detail_iv_faus_mleft"
        android:focusable="false"
        android:scaleType="fitXY"
        android:src="@drawable/main_focus_2"/>
</RelativeLayout>

