<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ppfuns.vod.activity.PayInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/payinfo_tv_title_mleft"
        android:layout_marginTop="@dimen/payinfo_tv_title_mtop"
        android:text="@string/payinfo_tv_title"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/payinfo_tv_title_size"/>

    <TextView
        android:id="@+id/tv_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/payinfo_tv_user_mright"
        android:layout_marginTop="@dimen/payinfo_tv_user_mtop"
        android:textSize="@dimen/payinfo_tv_user_size"/>

    <RelativeLayout
        android:layout_width="@dimen/payinfo_rl_info_width"
        android:layout_height="@dimen/payinfo_rl_info_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/payinfo_rl_info_mtop"
        android:background="@drawable/pay_bar">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/payinfo_tv_info_mtop"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/payinfo_tv_info_size"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_info"
            android:layout_centerHorizontal="true"
            android:textColor="#fe6d27"
            android:textSize="@dimen/payinfo_tv_price_size"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/payinfo_tv_tip_top"
        android:text="@string/payinfo_tv_tip"
        android:textSize="@dimen/payinfo_tv_tip_size"
        android:textColor="@color/colorWhite"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/payinfo_ll_info_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/payinfo_ll_info_mbottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="@dimen/payinfo_btn_width"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/payinfo_btn_mright"
            android:layout_weight="1"
            android:background="@drawable/album_btn_bg"
            android:drawableLeft="@drawable/pay_confirm"
            android:gravity="center"
            android:paddingLeft="@dimen/payinfo_btn_pleft"
            android:paddingRight="@dimen/payinfo_btn_pright"
            android:text="购买"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/payinfo_btn_size"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/payinfo_btn_width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/album_btn_bg"
            android:drawableLeft="@drawable/pay_cancel"
            android:paddingLeft="@dimen/payinfo_btn_pleft"
            android:paddingRight="@dimen/payinfo_btn_pright"
            android:text="取消"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/payinfo_btn_size"/>
    </LinearLayout>


</RelativeLayout>
