<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_title_mLeft"
                android:layout_marginTop="@dimen/main_title_mTop">
    <!--图标-->
    <ImageView
        android:id="@+id/main_title_logo"
        android:layout_width="@dimen/main_title_logo_width"
        android:layout_height="@dimen/main_title_logo_height"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"/>
    <!--标题名-->
    <TextView
        android:id="@+id/tv_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_toRightOf="@+id/main_title_logo"
        android:layout_marginLeft="@dimen/main_content_tv_mleft"
        android:textStyle="bold"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/main_title_tv_name"/>

    <!--右边 个人中心  搜索 设置 信号 时间 温度-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingRight="@dimen/main_title_mLeft">

        <!--个人中心-->
        <ImageView
            android:id="@+id/main_iv_individual"
            android:layout_width="@dimen/main_title_iv_width"
            android:layout_height="@dimen/main_title_iv_height"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/personal"/>

        <View
            android:layout_width="@dimen/main_title_diving_width"
            android:layout_height="@dimen/main_title_diving_height"
            android:layout_marginLeft="@dimen/main_title_diving_mleft"
            android:layout_marginRight="@dimen/main_title_diving_mright"
            android:background="@drawable/diving"/>

        <!--搜索-->
        <ImageView
            android:id="@+id/main_iv_search"
            android:layout_width="@dimen/main_title_iv_width"
            android:layout_height="@dimen/main_title_iv_height"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scaleType="fitXY"
            android:background="@drawable/search"/>
        <View
            android:layout_width="@dimen/main_title_diving_width"
            android:layout_height="@dimen/main_title_diving_height"
            android:layout_marginLeft="@dimen/main_title_diving_mleft"
            android:layout_marginRight="@dimen/main_title_diving_mright"
            android:background="@drawable/diving"/>


<!--        &lt;!&ndash;设置&ndash;&gt;

        <TextView
            android:id="@+id/main_iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/item_select"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:drawableLeft="@drawable/setting"
            android:text="设置"
            android:textSize="10sp"/>

        &lt;!&ndash;wifi信号&ndash;&gt;
        <TextView
            android:id="@+id/main_iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="wifi信号"
            android:textSize="10sp"/>-->


        <!--时间-->
        <TextView
            android:id="@+id/main_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_title_tv_time_size"
            android:textColor="@android:color/tertiary_text_light"
            />
<!--
        &lt;!&ndash;温度&ndash;&gt;
        <TextView
            android:id="@+id/main_iv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="温度"
            android:textSize="10sp"/>
-->

    </LinearLayout>


</RelativeLayout>