<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_rlParent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_rlPlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"/>

    <RelativeLayout
        android:id="@+id/activity_rlToolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true">

        <include layout="@layout/video_play_tools"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/activity_imgBuffer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:src="@drawable/loading_blue_1"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/vr_iv_cover_width"
        android:layout_height="@dimen/vr_iv_cover_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/entiti"/>
</RelativeLayout>
