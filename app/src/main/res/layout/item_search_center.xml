<?xml version="1.0" encoding="utf-8"?>
<!--108px-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_search_lv_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_list_center_item_height"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/item_search_lv_tv_seq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/search_list_center_item_seq_mtop"
        android:textColor="#88ffffff"
        android:textSize="@dimen/search_list_center_item_seq_textSize"/>

    <com.ppfuns.ui.view.ChangeColorTextView
        android:id="@+id/item_search_lv_tv_name"
        android:layout_width="@dimen/search_list_center_item_name_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/search_list_center_item_name_mleft"
        android:layout_marginTop="@dimen/search_list_center_item_name_mright"
        android:layout_toRightOf="@+id/item_search_lv_tv_seq"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="@dimen/search_list_center_item_name_textSize"/>

    <TextView
        android:id="@+id/item_search_lv_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:maxEms="3"
        android:singleLine="true"
        android:textColor="#88ffffff"
        android:textSize="@dimen/search_list_center_item_type_textSize"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_list_center_item_line_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/line_h"
        />


</RelativeLayout>
