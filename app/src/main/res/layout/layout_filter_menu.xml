<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/filter_main_height"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_gravity="bottom">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/filter_rv_title_height"
        android:layout_alignParentTop="true"
        android:background="@mipmap/filter_bj"
        android:focusable="false"
        android:paddingLeft="@dimen/filter_rv_title_lpad"
        android:paddingRight="@dimen/filter_rv_title_lpad"
        android:paddingTop="@dimen/filter_rv_title_tpad">

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/filter_content_height"
        android:layout_alignParentBottom="true"
        android:alpha="0.9"
        android:focusable="false"
        android:background="#0c0d0d"
        android:paddingLeft="@dimen/filter_rv_title_lpad"
        android:paddingRight="@dimen/filter_rv_title_lpad">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_content"
            android:layout_width="@dimen/filter_rv_content_width"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:focusable="false"
            android:background="@mipmap/dividing">

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</RelativeLayout>
